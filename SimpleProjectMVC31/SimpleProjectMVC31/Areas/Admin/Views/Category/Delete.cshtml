@model Category
@{ 
    ViewBag.Title = "Delete Category";
}

<h1>Confirm Deletion</h1>
<h3>Are you sure that you want to delete @Model.Name category?</h3>
<form asp-controller="Category" asp-action="Delete" method="post">
    <input type="hidden" asp-for="CategoryId"/>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="Category" asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
