@model Product
@{
    ViewBag.Title = "Delete Product";
}

<h1>Confirm Deletion</h1>
<h3>Are you sure that you want to delete @Model.Name product?</h3>
<form asp-controller="Product" asp-action="Delete" method="post">
    <input type="hidden" asp-for="ProductId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="Product" asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
