@model List<Product>
@{
    ViewBag.Title = "Product Manager";
}
<h1>@ViewBag.Title</h1>
<div class="row">
    <div class="col-sm-2">
        <div class="list-group">
            <a asp-controller="Product" asp-action="List" asp-route-id="All" class="list-group-item
      @(ViewBag.SelectedCategoryName == "All" ? "active" : "")">
                All
            </a>
            @foreach (Category category in ViewBag.AllCategories)
            {
                <a asp-controller="Product" asp-action="List" asp-route-id="@category.Name" class="list-group-item @(ViewBag.SelectedCategoryName == category.Name ? "active" : "")">
                    @category.Name
                </a>
            }
        </div>
    </div>
    <div class="col-sm-10">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Price.ToString("C")</td>
                        <td>
                            <a asp-controller="Product" asp-action="Update" asp-route-id="@product.ProductId">Update</a>
                        </td>
                        <td>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.ProductId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-controller="Product" asp-action="Add" class="btn btn-primary">Add new product</a>
    </div>
</div>
